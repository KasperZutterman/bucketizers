{
  "name": "ldes-bucketizers",
  "private": true,
  "repository": "https://github.com/TREEcg/bucketizers",
  "scripts": {
    "build-changed": "lerna run build --since HEAD",
    "build": "npm run build:ts",
    "build:ts": "tsc",
    "eslint": "eslint . --ext ts",
    "test": "jest ${1}",
    "eslint:cache": "npm run eslint -- --cache",
    "lint": "npm run eslint",
    "lint:fix": "npm run eslint -- --fix",
    "clean": "rm -rf ./node_modules && rm -rf ./packages/*/node_modules",
    "postinstall": "npm run bootstrap",
    "bootstrap": "lerna bootstrap",
    "lerna": "lerna",
    "watch": "tsc && tsc -w"
  },
  "devDependencies": {
    "@rdfjs/types": "^1.0.1",
    "@treecg/types": "0.0.5",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.1",
    "eslint": "^8.0.1",
    "eslint-config-es": "^3.30.15",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jest": "^25.2.2",
    "eslint-plugin-tsdoc": "^0.2.14",
    "eslint-plugin-unused-imports": "^1.1.5",
    "jest": "^27.3.1",
    "lerna": "^4.0.0",
    "rdf-data-factory": "^1.1.0",
    "ts-jest": "^27.0.7",
    "typescript": "^4.4.4"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    },
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec)).test.ts$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/mocks/",
      "index.js"
    ],
    "testEnvironment": "node"
  }
}
